<!doctype html>
%html
  %head
    %title= t('title')
    = javascript_include_tag "application"
    = stylesheet_link_tag "application"
    = csrf_meta_tags
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0"}
  %body
    %header
      %nav
        %h1= link_to t('title'), '/'
        %ul.social
          %li= link_to(image_tag('twitter.svg', class: 'twitter'), '#')
        %ul.menu
          %li= link_to 'Reading List', '#'
          %li= link_to 'Tools', '#'
    = yield

  %footer
    .info
      %p= "By #{t('owner')}"
