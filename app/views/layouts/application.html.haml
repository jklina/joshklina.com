<!doctype html>
%html
  %head
    %title joshklina.com
    = javascript_include_tag "ecrire", "application", "data-turbolinks-track" => true
    = stylesheet_link_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %meta{:name => "viewport", :content => "width=device-width; initial-scale=1.0; maximum-scale=1.0;"}
  %body
    %header
      %nav
        %h1= link_to 'joshklina.com', '/'
        %ul.social
          %li= link_to(image_tag('twitter.svg', class: 'twitter'), '#')
        %ul.menu
          %li= link_to 'Reading List', '#'
          %li= link_to 'Tools', '#'
        -#   - if !signed_in?
        -#     %li= link_to 'Log in', new_session_path
    = yield

  %footer
    .info
      %p By Josh Klina
