<!doctype html>
%html
  %head
    %title= t('title')
    = stylesheet_link_tag "application"
    = csrf_meta_tags
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0"}
  %body
    %header
      %nav
        %h1= link_to t('title'), '/'
        %ul.social
          %li= link_to(image_tag('exposition/twitter.svg', class: 'twitter'), '#')
        %ul.menu
          %li= link_to 'Book Reviews', main_app.book_reviews_path
    = yield

  %footer
    .info
      %p= "By #{t('owner')}"
