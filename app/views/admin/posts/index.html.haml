%section.posts
  %h2 Posts
  %table 
    %thead
      %tr
        %th Title
        %th Article
        %th Manage
    %tbody
      - @posts.each do |post|
        %tr
          %td= post.title
          %td= truncate(post.body, length: 40, separator: ' ')
          %td= link_to "Edit", edit_admin_post_path(post)
